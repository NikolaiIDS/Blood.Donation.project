                    </select>
                    <span asp-validation-for="@Model.CityId" class="small text-danger"></span>
                </div>
                <div class="form-group" style="padding-bottom: 20px;">
                    <label asp-for="@Model.BloodId">Кръвна група</label>
                    <select asp-for="@Model.BloodId" class="form-control">
                        <option value="1">A+</option>
                        <option value="2">A-</option>
                        <option value="3">B+</option>
                        <option value="4">B-</option>
                        <option value="5">AB+</option>
                        <option value="6">AB-</option>
                        <option value="7">0+</option>
                        <option value="8">0-</option>
                    </select>
                    <span asp-validation-for="@Model.BloodId" class="small text-danger"></span>
                </div>

                <div class="form-group" style="padding-bottom: 20px;">
                    <label asp-for="@Model.GenderId">Пол</label>
                    <select asp-for="@Model.GenderId" class="form-control">
                        <option value="1">Мъж</option>
                        <option value="2">Жена</option>

                    </select>
                    <span asp-validation-for="@Model.GenderId" class="small text-danger"></span>
                </div>

            </div>
            <div class="text-lg-start" style="padding-bottom: 20px;">
                <label style="padding-left: 10px;" asp-for="@Model.Password">Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-lg-start" style="padding-bottom: 20px;">
                <label style="padding-left: 10px;" asp-for="@Model.ConfirmPassword">Confirm Password</label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center" style="padding-top: 20px;">
                <button id="login-submit" type="submit" class="buttonCircle">
                    <span class="text">Register</span>
                    <i class="bi bi-check2 icon"></i>
                </button>

            </div>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
