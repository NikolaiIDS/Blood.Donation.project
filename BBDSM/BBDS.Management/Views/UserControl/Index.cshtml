@model IEnumerable<UserEditingViewModel>
@{
    ViewData["Title"] = "Index";
}




<div class=" container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"> Управление на потребители</h2>
        </div>

    </div>
    <br>

    <table class="table table-bordered table-striped" style="width : 100%">
        <thead>
            <tr>
                <th>
                    Данни на потребителя
                </th>
                <th>
                    Изпрати имейл
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="80%">
                        @item.UserName <br/>
                        @item.FirstName <br/>
                        @item.LastName <br/>
                        @item.EGN <br/>
                    </td>

                    <td>
                        <div class="btn-group" style="padding-top: 12px" role="group">
                            @if (User.IsInRole("Medic"))
                            {
                                <form  method="post" asp-controller="Email" asp-action="SendEmail" asp-route-id="@item.Email">
                                  @*  <i class="bi bi-pencil-square"></i>*@
                                    <input type="hidden" value="@item.Email" name="toEmail" />
                                    <input  class="btn button-17" type="submit" value="Изпрати"/>
                                </form>
                            }

                            @if (User.IsInRole("Admin"))
                            {

                                <a asp-controller="UserControl" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="UserControl" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"> <i  class="bi bi-person-dash-fill"></i> Delete</a>
                            }

                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>