@model List<UserEditingViewModel>
@{
    ViewData["Title"] = "Index";
}
@*<partial name="_FilterCriteria"/>*@
<div class=" container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"> Управление на потребители</h2>

            @if (User.IsInRole("Medic"))
            {
                <a asp-controller="Request" asp-action="SendRequest" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Създаване на обща заявка</a>
            }
        </div>
    </div>
    <br>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="form-inline pull-right">
            <label>Search</label>
            <input type="text" class="form-control" id="txtSearch" />
        </div>
    </div>
    <div id="grdUsers"></div>
</div>

<script>
    $(() => {
        getUsers();

        $('#txtSearch').on('keyup', () => {
            getUsers();
        });
    });

    function getUsers() {
        $.ajax({
            url: '@Url.Action("SearchUsers","UserControl")',
            datatype: 'html',
            method: 'GET',
            data: { searchText: $('#txtSearch').val() },
            success: function (res) {
                $('#grdUsers').html('').html(res);
            },
            error: function (err) {
                console.log(err);
            }
        })
    }
</script>
