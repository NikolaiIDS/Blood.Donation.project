@model IEnumerable<UserEditingViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class=" container p-3">
    <div class=" row pt-4">
        <div class="col-6">
            <h2 class=" text-primary"> Person List</h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="UserControl" asp-action="Create" class=" btn btn-primary">
                <i class="bi bi-person-plus"></i> &nbsp;    Add new person
            </a>
        </div>
    </div>
    <br></br>

    <table class="table table-bordered table-striped" style="width : 100%">
        <thead>
            <tr>
                <th>
                    Person Name
                </th>
                <th>
                    Person Age
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.UserName
                    </td>
                    
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="UserControl" asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                           <a asp-controller="UserControl" asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-person-dash-fill"></i> Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>