@model RegisterViewModel
<form method="post">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class=" text-primary">Add new person </h2>
            <hr />
        </div>
       @* <div asp-validation-summary="All"></div>*@
        <div class="mb-3 ">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class=" form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>
        
        <button type="submit" class="btn btn-primary" stype="width:130px">Add</button>
        <a asp-controller="UserControlController" asp-action="" class=" btn btn-secondary" stype="width:130px">
            Back to list
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}